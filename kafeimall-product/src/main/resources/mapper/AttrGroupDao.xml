<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kafeimall.product.infrastructure.repo.dao.AttrGroupDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.kafeimall.product.infrastructure.repo.dao.po.AttrGroupPO" id="attrGroupMap">
        <result property="attrGroupId" column="attr_group_id"/>
        <result property="attrGroupName" column="attr_group_name"/>
        <result property="sort" column="sort"/>
        <result property="descript" column="descript"/>
        <result property="icon" column="icon"/>
        <result property="catelogId" column="catelog_id"/>
    </resultMap>
    <resultMap id="saleAttrGroupMap" type="com.kafeimall.product.domain.valobj.SpuItemAttrGroup">
        <result property="groupName" column="attr_group_name"/>
        <collection property="attrs" ofType="com.kafeimall.product.domain.valobj.Attr">
            <result column="attr_name" property="attrName"></result>
            <result column="attr_id" property="attrId"></result>
            <result column="attr_value" property="attrValue"></result>
        </collection>
    </resultMap>
    <select id="getAttrGroupWithAttrsBySpuId"
            resultMap="saleAttrGroupMap"
            resultType="com.kafeimall.product.domain.valobj.SpuItemAttrGroup">
        SELECT
            pav.spu_id,
            ag.attr_group_id,
            ag.attr_group_name,
            aar.attr_id,
            attr.attr_name,
            pav.attr_value
        from  `pms_attr_group` ag
                  LEFT JOIN `pms_attr_attrgroup_relation` aar on aar.attr_group_id=ag.attr_group_id
                  LEFT JOIN `pms_attr` attr on attr.attr_id=aar.attr_id
                  LEFT JOIN `pms_product_attr_value` pav on pav.attr_id=attr.attr_id
        WHERE ag.catelog_id=#{cataLodId} AND pav.spu_id=#{spuId}
    </select>


</mapper>